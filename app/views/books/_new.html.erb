<h2>New book</h2>
<%= form_with url: books_path, model: Book.new, local: true, method: :post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title , { class: "form-control"}%>
  <%= f.label :body %>
  <%= f.text_area :body , { class: "form-control"}%>
  <%= f.submit "Create Book", { class: "btn btn-success"}%>
<% end %>
